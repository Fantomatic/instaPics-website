<div class="row" ng-controller="AccueilController">
    <div class="col-md-12">
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modalUpload">Uploader une image</button>
        <div ng-if="resultUpload.length > 0" class="error">{{resultUpload}}</div>


        <!-- Modal -->
        <div id="modalUpload" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <form role="form" ng-submit="upload()">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Upload d'une image</h4>
                        </div>
                        <div class="modal-body">
                            <input type="file" id="inputFile">
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-default">Envoyer</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                        </div>
                    </form>
                </div>
                <!--Fin Content Modal-->
            </div>
        </div>
        <!-- Fin Modal-->
    </div>
</div>

